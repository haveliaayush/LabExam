<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_edu"
        android:layout_width="200dp"
        android:layout_height="168dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Education"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="textToSpeech"/>

    <Button
        android:id="@+id/btn_morn"
        android:layout_width="200dp"
        android:layout_height="168dp"
        android:layout_marginLeft="5dp"
        android:text="Morning"
        app:layout_constraintStart_toEndOf="@+id/btn_edu"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="textToSpeech"/>

    <Button
        android:id="@+id/btn_noon"
        android:layout_width="200dp"
        android:layout_height="168dp"
        android:text="Noon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_edu"
        android:onClick="textToSpeech"/>

    <Button
        android:id="@+id/btn_over"
        android:layout_width="200dp"
        android:layout_height="168dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_morn"
        android:onClick="textToSpeech"/>

    <Button
        android:id="@+id/btn_temp"
        android:layout_width="200dp"
        android:layout_height="168dp"
        android:text="Education"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_noon"
        android:onClick="textToSpeech"/>

    <Button
        android:id="@+id/btn_temple"
        android:layout_width="200dp"
        android:layout_height="168dp"
        android:layout_marginTop="4dp"
        android:text="Education"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_over"
        android:onClick="textToSpeech"/>

    <Button
        android:id="@+id/btn_think"
        android:layout_width="200dp"
        android:layout_height="168dp"
        android:text="Education"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_temp"
        android:onClick="textToSpeech"/>

    <Button
        android:id="@+id/btn_words"
        android:layout_width="200dp"
        android:layout_height="168dp"
        android:text="Education"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_temple"
        android:onClick="textToSpeech"/>
</androidx.constraintlayout.widget.ConstraintLayout>